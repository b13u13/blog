<li class="media comment" data-id="<%= comment.id %>">
  <%= link_to image_tag(comment.user.avatar.thumb.url, alt: comment.user.nick_name, class: "media-object"),
              comment.user, target: '_blank', class: 'pull-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to comment.user.nick_name, comment.user, target: '_blank' %> говорит
      <small class="text-muted">[<%= comment.created_at.strftime('%-d %B %Y, %H:%M:%S') %>]</small></h4>
    <p><%= comment.body %></p>
  </div>

</li>