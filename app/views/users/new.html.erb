<% provide(:title, t('sign_up.header')) %>
<h1><%= t('sign_up.header') %></h1>

<div class="row">
  <div class="span6 offset3">
        <%= form_for @user, :html => {:multipart => true} do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label t('sign_up.label_name') %>
            <%= f.text_field :name %>

            <%= f.label t('sign_up.label_email') %>
            <%= f.text_field :email %>

            <%= f.label t('sign_up.label_password') %>
            <%= f.password_field :password %>

            <%= f.label t('sign_up.label_confirm') %>
            <%= f.password_field :password_confirmation %>

        <p>
          <label>My Avatar</label>
          <%= image_tag(@user.avatar_url) if @user.avatar? %>
          <%= f.file_field :avatar %>


          <%= f.submit t('sign_up.create_button'), class: "btn btn-large btn-primary" %>
        <% end %>


  </div>

</div>