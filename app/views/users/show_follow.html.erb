<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <div class="avatar">
        <%= image_tag @user.avatar.thumb.url %>
      </div>

      <h1><%= @user.name %></h1>
      <span><%= link_to t('show_follow.link'), @user %></span>
      <span><b><%= t('show_follow.posts')%></b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to (image_tag user.avatar.small_thumb.url), user %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>