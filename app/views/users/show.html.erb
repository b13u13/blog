<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <div class="avatar">
        <%=  image_tag @user.avatar.url(:thumb) %>
      </div>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'shared/follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
        <h3><%= t('show_follow.posts')%> <%= @user.microposts.count %></h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>

